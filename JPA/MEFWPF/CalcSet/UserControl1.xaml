<UserControl x:Class="CalcSet.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalcSet"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <StackPanel>
            <TextBox x:Name="ValueA" Width="100"></TextBox>
            <TextBox x:Name="ValueB" Width="100"></TextBox>
        </StackPanel>
        <StackPanel>
            <Button x:Name="ButtonSum">Suma</Button>
            <Button x:Name="ButtonMulti">Iloczyn</Button>
        </StackPanel>
        <TextBlock x:Name="Result" Width="100"></TextBlock>
    </StackPanel>
</UserControl>
