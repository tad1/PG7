<UserControl x:Class="FieldCelluarAutomaton.Views.RulesView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FieldCelluarAutomaton.Views"
        xmlns:viewModels="clr-namespace:FieldCelluarAutomaton.ViewModels"
        d:DataContext="{d:DesignInstance viewModels:RulesViewModel}"
        mc:Ignorable="d"
        >
    <ListBox ItemsSource="{Binding Rules.Values}" Background="#131313" Foreground="White" SelectedItem="{Binding SelectedRule}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <UserControl MouseDoubleClick="Control_OnMouseDoubleClick">
                    <TextBlock Foreground="White" Text="{Binding RuleStr}"/>
                </UserControl>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
